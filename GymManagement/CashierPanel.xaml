        <DataGrid Name="CashierPanelDataGrid" AutoGenerateColumns="True" Margin="25,665,25,25" RenderTransformOrigin="0.5,0.5" ColumnWidth="*" SelectionChanged="CashierPanelDataGrid_SelectionChanged" >
            <DataGrid.Resources>
